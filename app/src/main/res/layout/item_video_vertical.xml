<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_item_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/focus_bangumi_image_height_4"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <com.fanchen.imovie.view.RecycleImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/focus_bangumi_image_height_4"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#33000000"
            android:gravity="right"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.fanchen.imovie.view.TriangleLabelView
            android:id="@+id/tlv_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|right"
            app:backgroundColor="@color/colorPrimary"
            app:corner="rightTop"
            app:labelBottomPadding="5dp"
            app:labelCenterPadding="0dp"
            app:labelTopPadding="12dp"
            app:primaryTextColor="@color/white"
            app:primaryTextSize="8sp"
            app:secondaryTextSize="8sp" />

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_item_img"
        android:maxLines="2"
        android:padding="3dp"
        android:textColor="#515151"
        android:textSize="14sp" />


</RelativeLayout>






